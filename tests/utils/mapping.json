{
    "transformation_mapping": [
        {
            "column": "Name",
            "new_name": "Student Name",
            "value_mappings": [
                {
                    "*": "Amit Singh"
                }
            ]
        },
        {
            "column": "Age_Column",
            "new_name": "Age",
            "value_mappings": [
                {
                    "FILTER": "30"
                }
            ]
        },
        {
            "column": "Location",
            "new_name": "Country",
            "value_mappings": [
                {
                    "REPLACE_usa": "United state of America"
                }
            ]
        },
        {
            "column": "Gender",
            "new_name": "Sex",
            "value_mappings": [
                {
                    "MALE": "M",
                    "FEMALE": "F"
                }
            ]
        },
        {
            "column": "Zipcode_Column",
            "new_name": "Processed_Text_regex",
            "value_mappings": [
                {
                    "REPLACE_hello": "hi",
                    "REGEX_[0-9]+": "NUMBER"
                }
            ]
        }
    ]
}
